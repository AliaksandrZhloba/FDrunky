<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtQuestion"
        style="@style/AlcoApp.QuestionTextStyle"
        android:layout_width="match_parent"
        android:layout_marginTop="74dp"
        android:gravity="top"
        android:text="@string/WhatToDrink"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search_48dp" />

        <AutoCompleteTextView
            android:id="@+id/txtDrink"
            style="@style/AlcoApp.BaseTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/DrinkWatermark"
            android:imeOptions="actionSearch"
            android:popupBackground="@drawable/autocomplete_drinks_dropdown"
            android:singleLine="true"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mic_48dp" />
    </LinearLayout>

    <View
        android:layout_width="312dp"
        android:layout_height="2dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lInput" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lDrinks"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNotFound"
        style="@style/AlcoApp.BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|clip_vertical"
        android:text="@string/NothingWasFound"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnHowMuch"
        style="@style/AlcoApp.ActionButtonStyle"
        android:layout_marginBottom="51dp"
        android:text="@string/HowMuch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
