<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlcoApp.EffectRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AlcoApp.QuestionTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AlcoApp.CaptionTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/caption_height</item>
        <item name="android:textColor">#dc000000</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="AlcoApp.ActionButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/actionButtonBackgroundColor</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="DrinkTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DrinkDropDownTextStyle">
        <item name="android:textColor">#dc000000</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
